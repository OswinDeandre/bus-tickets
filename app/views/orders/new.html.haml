.page.py-5
  .container
    .row.justify-content-center
      .col-sm-6
        %h2.text-center= "Would you like to reserve this ticket #{current_user.email} "
        %h2= @ticket.id

        %center
          = form_with(model: @order, locale: true) do |o|
            = o.hidden_field :ticket_id, value: @ticket.id
            = o.submit "Yes continue my order", class: "btn btn-primary"
